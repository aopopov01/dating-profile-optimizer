# Application Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0
API_BASE_URL=http://localhost:3002

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/dating_optimizer_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dating_optimizer_dev
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# AI Service Configuration (OpenAI)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_ORGANIZATION=your-org-id

# Computer Vision Configuration
CV_SERVICE_URL=https://api.computer-vision.com/v1
CV_API_KEY=your-computer-vision-api-key

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Image Storage Configuration (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Analytics Configuration
ENABLE_ANALYTICS=true
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=your-ga4-measurement-id

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,https://yourdomain.com

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX_REQUESTS=20
PHOTO_ANALYSIS_RATE_LIMIT=5

# Security Configuration
BCRYPT_ROUNDS=12
MAX_UPLOAD_SIZE=10485760
MAX_PHOTOS_PER_ANALYSIS=10
ALLOWED_UPLOAD_TYPES=image/jpeg,image/png,image/webp

# Bio Generation Configuration
MAX_BIO_VARIATIONS=5
DEFAULT_BIO_VARIATIONS=3
BIO_CACHE_TTL=3600

# Photo Analysis Configuration
PHOTO_ANALYSIS_CACHE_TTL=7200
FACE_DETECTION_CONFIDENCE=0.8
ENABLE_ADVANCED_ANALYSIS=true

# Development Tools
SWAGGER_ENABLED=true
DEBUG_MODE=false

# Success Tracking
ENABLE_SUCCESS_TRACKING=true
SUCCESS_METRICS_RETENTION_DAYS=365