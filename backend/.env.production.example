# Dating Profile Optimizer - Production Environment Configuration
# Replace all placeholder values with actual production credentials

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
APP_NAME="Dating Profile Optimizer"
APP_VERSION="2.1.0"
API_BASE_URL=https://api.datingprofileoptimizer.com
WEB_BASE_URL=https://datingprofileoptimizer.com
MOBILE_APP_SCHEME=datingprofileoptimizer://

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Production PostgreSQL Database
DATABASE_URL=postgresql://username:password@hostname:5432/dating_optimizer_prod
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_NAME=dating_optimizer_prod
DB_USER=your_db_username
DB_PASS=your_secure_db_password
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=20

# Redis Cache Configuration
REDIS_URL=redis://username:password@your-redis-host:6379
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your_ultra_secure_jwt_secret_key_minimum_256_bits_long
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
COOKIE_SECRET=your_cookie_secret_key_here

# =============================================================================
# AI & MACHINE LEARNING SERVICES
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_organization_id
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Google AI Configuration (Alternative)
GOOGLE_AI_API_KEY=your_google_ai_api_key
GOOGLE_AI_PROJECT_ID=your_project_id

# Computer Vision Services
AZURE_COMPUTER_VISION_KEY=your_azure_cv_key
AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# =============================================================================
# CLOUD STORAGE & CDN
# =============================================================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=dating-optimizer-uploads
AWS_CLOUDFRONT_DOMAIN=https://your-cloudfront-domain.com

# Cloudinary Configuration (Alternative)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# EMAIL SERVICES
# =============================================================================
# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@datingprofileoptimizer.com
SENDGRID_FROM_NAME="Dating Profile Optimizer"

# Alternative: Mailgun Configuration
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.datingprofileoptimizer.com

# =============================================================================
# SMS & PHONE VERIFICATION
# =============================================================================
# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================
# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Apple Push Notification Service (APNS)
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_team_id
APNS_PRIVATE_KEY_PATH=/path/to/your/apns_private_key.p8
APNS_BUNDLE_ID=com.yourcompany.datingprofileoptimizer

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_MONTHLY=price_monthly_subscription_id
STRIPE_PRICE_ID_YEARLY=price_yearly_subscription_id

# Apple App Store Connect
APP_STORE_CONNECT_KEY_ID=your_key_id
APP_STORE_CONNECT_ISSUER_ID=your_issuer_id
APP_STORE_CONNECT_PRIVATE_KEY=/path/to/AuthKey_KEYID.p8

# Google Play Console
GOOGLE_PLAY_SERVICE_ACCOUNT=/path/to/service-account.json

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_TRACKING_ID=GA_MEASUREMENT_ID
GOOGLE_ANALYTICS_API_SECRET=your_api_secret

# Mixpanel Configuration
MIXPANEL_PROJECT_TOKEN=your_mixpanel_token
MIXPANEL_API_SECRET=your_api_secret

# Amplitude Configuration
AMPLITUDE_API_KEY=your_amplitude_key

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# =============================================================================
# SOCIAL MEDIA INTEGRATIONS
# =============================================================================
# Facebook/Meta Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_long_lived_access_token

# Instagram Basic Display
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Twitter API v2
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# =============================================================================
# CONTENT MODERATION
# =============================================================================
# Google Cloud AI Content Safety
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_PRIVATE_KEY_ID=your_key_id
GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----\n"
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# AWS Rekognition
AWS_REKOGNITION_REGION=us-east-1

# Microsoft Azure Content Moderator
AZURE_CONTENT_MODERATOR_KEY=your_content_moderator_key
AZURE_CONTENT_MODERATOR_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Geocoding Service
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Weather API (for contextual features)
OPENWEATHERMAP_API_KEY=your_openweathermap_key

# =============================================================================
# SSL & SECURITY
# =============================================================================
# SSL Certificate Paths
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Security Headers
HSTS_MAX_AGE=31536000
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' https://js.stripe.com"
CSP_STYLE_SRC="'self' 'unsafe-inline' https://fonts.googleapis.com"

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/dating-optimizer/app.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Application Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key
NEW_RELIC_APP_NAME="Dating Profile Optimizer - Production"

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TOKEN=your_health_check_token

# =============================================================================
# RATE LIMITING & THROTTLING
# =============================================================================
# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=true

# API Throttling
API_THROTTLE_TTL=60000  # 1 minute
API_THROTTLE_LIMIT=10

# =============================================================================
# FEATURE FLAGS & TOGGLES
# =============================================================================
# Feature Toggles
FEATURE_FLAG_PREMIUM_FEATURES=true
FEATURE_FLAG_SOCIAL_SHARING=true
FEATURE_FLAG_AI_BIO_GENERATION=true
FEATURE_FLAG_PHOTO_ANALYSIS=true
FEATURE_FLAG_ANALYTICS_DASHBOARD=true
FEATURE_FLAG_PUSH_NOTIFICATIONS=true
FEATURE_FLAG_EMAIL_NOTIFICATIONS=true
FEATURE_FLAG_BIOMETRIC_AUTH=true
FEATURE_FLAG_DARK_MODE=true
FEATURE_FLAG_MULTI_LANGUAGE=true

# Beta Features
FEATURE_FLAG_VIDEO_ANALYSIS=false
FEATURE_FLAG_VOICE_BIO_GENERATION=false
FEATURE_FLAG_AR_PHOTO_PREVIEW=false

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
# Database Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=dating-optimizer-backups

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================
# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
PRIVACY_POLICY_VERSION=2.1
TERMS_OF_SERVICE_VERSION=2.1

# Age Verification
MINIMUM_AGE=18
AGE_VERIFICATION_REQUIRED=true

# Content Policy
CONTENT_MODERATION_ENABLED=true
ADULT_CONTENT_FILTER_LEVEL=strict
PROFANITY_FILTER_ENABLED=true

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================
# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=production
CONTAINER_MEMORY_LIMIT=2048m
CONTAINER_CPU_LIMIT=1000m

# Kubernetes Configuration
K8S_NAMESPACE=dating-optimizer-prod
K8S_REPLICA_COUNT=3
K8S_AUTO_SCALING_MIN=2
K8S_AUTO_SCALING_MAX=10

# Load Balancer Configuration
LOAD_BALANCER_ALGORITHM=round_robin
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_INTERVAL=30s

# =============================================================================
# DEVELOPMENT & TESTING (Production Override)
# =============================================================================
DEBUG=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_APIS=false
SKIP_EMAIL_VERIFICATION=false
SKIP_PHONE_VERIFICATION=false
TEST_MODE=false